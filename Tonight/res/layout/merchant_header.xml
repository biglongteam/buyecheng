    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.ab.view.sliding.AbSlidingPlayView
        android:id="@+id/mAbSlidingPlayView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x280" >
    </com.ab.view.sliding.AbSlidingPlayView>

